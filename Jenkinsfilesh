#!groovy
pipeline{
    agent any
    stages {
        stage ("Build"){
            steps{
                echo 'Building'
                git 'https://github.com/GuilhermeBuenoMartins/indra20190417'
            }
        }
        stage ("Envoinment"){
            steps{
                echo 'Setting up envoinment'
                sh 'virtualenv env'
                sh 'env/bin/activate'
                sh 'cd submarino'
            }
        }
        stage ("Deploy"){
            steps{
                sh '''
                python -m Pyautomators -f json -o ./hello-submarino.json
                '''
            }
        }
    }
}

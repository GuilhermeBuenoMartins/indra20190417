#!groovy
pipeline{
    agent any
    stages {
        stage ("Build"){
            steps{
                echo 'Building'
                git 'https://github.com/GuilhermeBuenoMartins/indra20190417'
            }
        }
        stage ("Envoinment"){
            steps{
                echo 'Setting up envoinment'
                sh 'cd ..'
                sh '/var/jenkins_home/jobs/env/bin/activate'
                sh 'cd ./test-pipe/submarino'
            }
        }
        stage ("Deploy"){
            steps{
                sh '''
                python -m Pyautomators -f json -o ./hello-submarino.json
                '''
            }
        }
    }
}

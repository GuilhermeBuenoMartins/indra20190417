#!groovy
pipeline{
    agent any
    stages {
        stage ("Build"){
            steps{
                echo 'Building'
                git 'https://github.com/GuilhermeBuenoMartins/indra20190417'
            }
        }
        stage ("Test"){
            steps{
                sh '''
                pip install python-jenkins
                python -m pip install --upgrade pip
                pip install virtualenv
                virtualenv env
                env//Scripts//activate
                '''
                sh '''
                cd Submarino
                '''
            }
        }
        stage ("Deploy"){
            steps{
                sh '''
                python -m Pyautomators -f json -o .//hello-submarino.json
                '''
            }
    }
}
